<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MuscleMice"
        tools:targetApi="31">
        <activity
            android:name=".ui.theme.WorkoutScreen"
            android:exported="false"
            android:label="@string/title_activity_workout_screen"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".BottomNavigatorBar"
            android:exported="false"
            android:label="@string/title_activity_bottom_navigator_bar"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".BottomNavItem"
            android:exported="false"
            android:label="@string/title_activity_bottom_nav_item"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".AppNavigation"
            android:exported="false"
            android:label="@string/title_activity_app_navigation"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".RegisterScreen"
            android:exported="false"
            android:label="@string/title_activity_register_screen"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".SplashScreen"
            android:exported="false"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".ui.theme.SplashScreen"
            android:exported="false"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.MuscleMice" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MuscleMice">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>